<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:w="sap.ui.integration.widgets"
	displayBlock="true">
	<Page title="{i18n>appTitle}">
		<subHeader>
			<Toolbar>
				<ToolbarSpacer />
				<Title text="Card without Header &amp; Card without Content" />
				<ToolbarSpacer />
			</Toolbar>
		</subHeader>

		<Panel>
			<f:GridContainer>
				<w:Card id="i1" manifest="{manifests>/noHeaderNoContent/card131}">
					<w:layoutData>
						<f:GridContainerItemLayoutData columns="4" />
					</w:layoutData>
				</w:Card>

				<w:Card id="i2" manifest="{manifests>/noHeaderNoContent/card141}">
					<w:layoutData>
						<f:GridContainerItemLayoutData columns="4" />
					</w:layoutData>
				</w:Card>

				<f:Card id="f3" height="100%">
					<f:layoutData>
						<f:GridContainerItemLayoutData columns="2" rows="2" />
					</f:layoutData>
					<f:content>
						<VBox alignItems="Center" justifyContent="Center" width="100%">
							<Avatar src="sap-icon://SAP-icons-TNT/application-service" />
							<Link text="Create Application" />
						</VBox>
					</f:content>
				</f:Card>
			</f:GridContainer>
		</Panel>
	</Page>
</mvc:View>